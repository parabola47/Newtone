<?xml version="1.0" encoding="utf-8"?>
<com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/albums_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnWidth="100dp"
    android:splitMotionEvents="false"
    app:fastScrollAutoHide="true"
    app:fastScrollAutoHideDelay="500"
    app:fastScrollPopupBgColor="@android:color/white"
    app:fastScrollPopupTextColor="@android:color/black"
    app:fastScrollThumbColor="@color/colorAccent"
    app:fastScrollThumbEnabled="true"
    app:fastScrollThumbInactiveColor="@color/colorAccent"
    app:fastScrollTrackColor="@color/colorScrollbarBg"
    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
    app:spanCount="2"
    tools:context=".ui.fragment.start.TabAlbumFragment"
    tools:listitem="@layout/item_album" />
