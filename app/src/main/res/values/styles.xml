<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorNewtoneBackground</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SettingItemContainer">
        <item name="android:background">@color/colorListItemDefaultBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TextViewDialogAction">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="PlayerTextView">
        <item name="android:layout_margin">4dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomActionBar">
        <item name="elevation">8dp</item>
    </style>

    <style name="FxSettingCroller">
        <item name="indicator_color">@color/colorAccent</item>
        <item name="indicator_disable_color">@android:color/darker_gray</item>
        <item name="is_continuous">true</item>
        <item name="label_size">10sp</item>
        <item name="label_color">@android:color/white</item>
        <item name="label_disabled_color">@android:color/darker_gray</item>
        <item name="progress_primary_color">@android:color/transparent</item>
        <item name="progress_primary_disable_color">@android:color/transparent</item>
        <item name="progress_primary_stroke_width">0</item>
        <item name="progress_secondary_color">@android:color/transparent</item>
        <item name="progress_secondary_disable_color">@android:color/transparent</item>
        <item name="progress_secondary_stroke_width">0</item>
    </style>

    <style name="TrackAdditionalInfoTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:editable">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
        <item name="maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
