<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorActivityBackground</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TextViewDialogAction">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="PlayerTextView">
        <item name="android:layout_margin">4dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomActionBar">
        <item name="elevation" tools:targetApi="lollipop">8dp</item>
    </style>

    <style name="FxSettingCroller">
        <item name="indicator_color">@color/colorAccent</item>
        <item name="indicator_disable_color">@android:color/darker_gray</item>
        <item name="is_continuous">true</item>
        <item name="progress_primary_color">@android:color/transparent</item>
        <item name="progress_primary_disable_color">@android:color/transparent</item>
        <item name="progress_primary_stroke_width">0</item>
        <item name="progress_secondary_color">@android:color/transparent</item>
        <item name="progress_secondary_disable_color">@android:color/transparent</item>
        <item name="progress_secondary_stroke_width">0</item>
    </style>

</resources>
