<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorNewtoneBackground</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <declare-styleable name="CustomTheme">
        <attr name="themeName" format="string" />
    </declare-styleable>


    <string name="theme_newtone" translatable="false">Newtone</string>
    <string name="theme_arium" translatable="false">Arium</string>
    <string name="theme_blues" translatable="false">Blues</string>
    <string name="theme_floyd" translatable="false">Floyd</string>
    <string name="theme_purple" translatable="false">Purple</string>
    <string name="theme_passion" translatable="false">Passion</string>


    <!-- Base application theme. -->
    <style name="Newtone" parent="BaseTheme">
        <item name="colorPrimary">@color/colorNewtonePrimary</item>
        <item name="colorPrimaryDark">@color/colorNewtonePrimaryDark</item>
        <item name="colorAccent">@color/colorNewtonePrimary</item>

        <item name="themeName">@string/theme_newtone</item>
    </style>

    <style name="Arium" parent="BaseTheme">
        <item name="colorPrimary">@color/colorAriumPrimary</item>
        <item name="colorPrimaryDark">@color/colorAriumPrimaryDark</item>
        <item name="colorAccent">@color/colorAriumPrimary</item>

        <item name="themeName">@string/theme_arium</item>
    </style>

    <style name="Blues" parent="BaseTheme">
        <item name="colorPrimary">@color/colorBluesPrimary</item>
        <item name="colorPrimaryDark">@color/colorBluesPrimaryDark</item>
        <item name="colorAccent">@color/colorBluesPrimary</item>

        <item name="themeName">@string/theme_blues</item>
    </style>

    <style name="Floyd" parent="BaseTheme">
        <item name="colorPrimary">@color/colorFloydPrimary</item>
        <item name="colorPrimaryDark">@color/colorFloydPrimaryDark</item>
        <item name="colorAccent">@color/colorFloydPrimary</item>

        <item name="themeName">@string/theme_floyd</item>
    </style>

    <style name="Purple" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPurplePrimary</item>
        <item name="colorPrimaryDark">@color/colorPurplePrimaryDark</item>
        <item name="colorAccent">@color/colorPurplePrimary</item>

        <item name="themeName">@string/theme_purple</item>
    </style>

    <style name="Passion" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPassionPrimary</item>
        <item name="colorPrimaryDark">@color/colorPassionPrimaryDark</item>
        <item name="colorAccent">@color/colorPassionPrimary</item>

        <item name="themeName">@string/theme_passion</item>
    </style>


    <color name="colorNewtonePrimary">#009688</color>
    <color name="colorNewtonePrimaryDark">#00574B</color>

    <color name="colorAriumPrimary">#FF9E36</color>
    <color name="colorAriumPrimaryDark">#D9862E</color>

    <color name="colorBluesPrimary">#8ABBFF</color>
    <color name="colorBluesPrimaryDark">#759FD9</color>

    <color name="colorFloydPrimary">#CC5E91</color>
    <color name="colorFloydPrimaryDark">#8C4164</color>


    <color name="colorPurplePrimary">#8266CC</color>
    <color name="colorPurplePrimaryDark">#59468C</color>

    <color name="colorPassionPrimary">#CD4E57</color>
    <color name="colorPassionPrimaryDark">#8C353B</color>


    <style name="SettingItemContainer">
        <item name="android:background">@color/colorListItemDefaultBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="PlayerTextView">
        <item name="android:layout_margin">4dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomActionBar">
        <item name="elevation">8dp</item>
    </style>

    <style name="FxSettingCroller">
        <item name="indicator_color">?attr/colorPrimary</item>
        <item name="indicator_disable_color">@android:color/darker_gray</item>
        <item name="label_size">10sp</item>
        <item name="label_color">?android:attr/textColorSecondary</item>
        <item name="label_disabled_color">@android:color/darker_gray</item>
    </style>

    <style name="FxSettingContinuousCroller" parent="FxSettingCroller">
        <item name="is_continuous">true</item>
        <item name="progress_primary_color">@android:color/transparent</item>
        <item name="progress_primary_disable_color">@android:color/transparent</item>
        <item name="progress_primary_stroke_width">0</item>
        <item name="progress_secondary_color">@android:color/transparent</item>
        <item name="progress_secondary_disable_color">@android:color/transparent</item>
        <item name="progress_secondary_stroke_width">0</item>
    </style>

    <style name="FxDiscreteSettingCroller" parent="FxSettingCroller">
        <item name="is_continuous">false</item>
        <item name="progress_primary_color">?attr/colorPrimary</item>
        <item name="progress_primary_disable_color">@android:color/darker_gray</item>
    </style>

    <style name="MaterialToggleButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@color/mtrl_toggle_btn_bg_color_selector</item>
        <item name="android:textColor">@color/mtrl_toggle_btn_text_color_selector</item>
    </style>

</resources>
